year <- sub("-.*", "", meta$Date)
note <- sprintf("{R} package version %s", meta$Version)

citEntry(
  entry = "Misc",
  title = "{lineSampler}: File Line Sampler",
  author = personList(as.person("Drew Schmidt")),
  year = year,
  note = note,
  url = "https://cran.r-project.org/package=lineSampler",
  textVersion = NULL,
  key = "lineSamplerPackage"
)

citEntry(
  entry = "Manual",
  title = "Introduction to the {lineSampler} Package",
  author = personList(as.person("Drew Schmidt")),
  year = "2016",
  note = "{R} Vignette",
  url = "https://cran.r-project.org/package=lineSampler",
  textVersion = NULL,
  key = "lineSamplerVignette"
)
